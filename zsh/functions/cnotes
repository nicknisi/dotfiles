today=$(date +"%Y-%m-%d")
    if [ -e ~/notes/${today}-notes.md ];
    then
        echo "${today}-notes.md already created"
    else
        # echo "no file created"
        nvim -c "+normal ggO# What Did I Do?" -c "+normal ggo" -c "+normal ggo## $(date)" -c ':s/$/\r/' -c 'se nohlsearch' ~/notes/${today}-notes.md
    fi
