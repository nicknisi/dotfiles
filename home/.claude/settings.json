{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "additionalDirectories": [
      "~/.claude/"
    ],
    "allow": [
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(file:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(md5:*)",
      "Bash(readlink:*)",
      "Bash(realpath:*)",
      "Bash(shasum:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",

      "Bash(docker compose exec:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(docker run:*)",

      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",

      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git config --get:*)",
      "Bash(git describe:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git rebase:*)",
      "Bash(git remote -v:*)",
      "Bash(git rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "Bash(git tag -l:*)",

      "Bash(date:*)",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(hostname:*)",
      "Bash(id:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(uname:*)",
      "Bash(whoami:*)",

      "Bash(cut:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(rg:*)",
      "Bash(sort:*)",
      "Bash(tr:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(yq:*)",

      "Bash(brew info:*)",
      "Bash(brew list:*)",
      "Bash(npm --version:*)",
      "Bash(npm config get:*)",
      "Bash(npm list:*)",
      "Bash(npm outdated:*)",
      "Bash(npm run build:*)",
      "Bash(npm test:*)",
      "Bash(npm view:*)",
      "Bash(pip list:*)",
      "Bash(pip show:*)",

      "Bash(node --version:*)",
      "Bash(node:*)",
      "Bash(python --version:*)",
      "Bash(ruby --version:*)",

      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(wget:*)",
      "Bash(which:*)",

      "ExitPlanMode(*)",
      "WebFetch(domain:*)",
      "WebSearch",
      "mcp__*"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(docker push:*)",
      "Bash(npm publish:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",

      "Bash(dd if=/dev/zero:*)",
      "Bash(dd of=/dev:*)",
      "Bash(diskutil apfs changePassphrase:*)",
      "Bash(diskutil apfs decryptVolume:*)",
      "Bash(diskutil apfs deleteContainer:*)",
      "Bash(diskutil apfs deleteSnapshot:*)",
      "Bash(diskutil apfs deleteVolume:*)",
      "Bash(diskutil apfs deleteVolumeGroup:*)",
      "Bash(diskutil apfs eraseVolume:*)",
      "Bash(diskutil appleRAID:*)",
      "Bash(diskutil coreStorage:*)",
      "Bash(diskutil cs:*)",
      "Bash(diskutil disableJournal:*)",
      "Bash(diskutil disableOwnership:*)",
      "Bash(diskutil eraseDisk:*)",
      "Bash(diskutil eraseVolume:*)",
      "Bash(diskutil partitionDisk:*)",
      "Bash(diskutil randomDisk:*)",
      "Bash(diskutil reformat:*)",
      "Bash(diskutil resetFusion:*)",
      "Bash(diskutil zeroDisk:*)",
      "Bash(mkfs:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf $HOME:*)",
      "Bash(sudo rm -rf /:*)",
      "Bash(sudo rm -rf /*:*)"
    ]
  },
  "model": "opus",
  "cleanupPeriodDays": 60,
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nicknisi/Developer/dotfiles/bin/claude-status-hook PreToolUse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nicknisi/Developer/dotfiles/bin/claude-status-hook Stop"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nicknisi/Developer/dotfiles/bin/claude-status-hook SubagentStop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/nicknisi/Developer/dotfiles/bin/claude-status-hook Notification"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "claude-statusline"
  },
  "enabledPlugins": {
    "content@nicknisi": true,
    "developer-experience@nicknisi": true,
    "essentials@nicknisi": true,
    "sandbox@nicknisi": true,
    "spec-driven@nicknisi": true,
    "workos@nicknisi": true,
    "consultant@nicknisi": true,
    "agent-sdk-dev@claude-code-plugins": true,
    "learning-output-style@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "ideation@nicknisi": true,
    "meta@nicknisi": true
  },
  "alwaysThinkingEnabled": true
}
